<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imView"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/mData"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/wrapperType"
                android:layout_below="@id/mData"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/kind"
                android:layout_below="@id/wrapperType"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/artistId"
                android:layout_below="@id/kind"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/collectionId"
                android:layout_below="@id/artistId"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/trackId"
                android:layout_below="@id/collectionId"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/artistName"
                android:layout_below="@id/trackId"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View 1"
                android:id="@+id/collectionName"
                android:layout_below="@id/artistName"
                android:layout_toRightOf="@+id/imView"
                android:layout_toEndOf="@+id/imView" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button"
                    android:layout_above="@+id/artistName"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>